<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:models="clr-namespace:StockAdmin.Models"
             x:Class="StockAdmin.Views.Pages.ClothOperationView.ClothOperationPage" 
             x:DataType="models:ClothOperation">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal">
            <TextBox Watermark="Поиск..."
                     Width="200" 
                     Background="White" />
        </StackPanel>
        <TextBlock x:Name="SumText" Grid.Row="0"
                   HorizontalAlignment="Center"/>
        <Button 
            Grid.Row="0" 
            HorizontalAlignment="Right" 
            Content="⬅️" 
            Click="BackToPartyPage"/>
        <DataGrid 
            Grid.Row="1" 
            x:Name="List">
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Операция" 
                    Binding="{Binding operation.name}" 
                    IsReadOnly="True"/>
                
                <DataGridTextColumn 
                    Header="Цена" 
                    Binding="{Binding price.number}" 
                    IsReadOnly="True"/>
                
                
                <DataGridCheckBoxColumn Header="Окончена ли" 
                                        Binding="{Binding isEnded}" 
                                        IsReadOnly="True"/>
                <DataGridTemplateColumn>
                    <DataTemplate>
                        <WrapPanel Orientation="Horizontal">
                            <Button Content="✏️" 
                                    Click="NavigateToEditClothOperationPage"/>
                            <Button Content="🗑️" 
                                    />
                        </WrapPanel>
                    </DataTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate DataType="models:ClothOperation">
                    <StackPanel>
                        <WrapPanel>
                            <TextBox Watermark="Поиск..."/>
                            <Button Content="Добавить" Click="NavigateToAddedClothOperationPersonPage"/>
                        </WrapPanel>
                        <DataGrid ItemsSource="{Binding clothOperationPersons}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Header="Человек"
                                    Binding="{Binding person.lastName}"
                                    IsReadOnly="True"/>
                                
                                <DataGridTextColumn
                                    Header="Дата начала"
                                    Binding="{Binding dateStart, StringFormat={}{0:d}}"
                                    IsReadOnly="True"/>
                                
                                <DataGridCheckBoxColumn
                                    Header="Закончена ли"
                                    Binding="{Binding isEnded}"
                                    IsReadOnly="True"/>
                                <DataGridTemplateColumn>
                                    <DataTemplate>
                                        <WrapPanel Orientation="Horizontal">
                                            <Button Content="✏️" 
                                                    Click="NavigateToEditClothOperationPersonPage"/>
                                            <Button Content="🗑️" 
                                                    />
                                        </WrapPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        
        <Button Grid.Row="1" 
                Content="+" 
                Background="#192655" 
                FontWeight="Bold" 
                Foreground="White" 
                FontSize="20" 
                HorizontalAlignment="Right" 
                Margin=" 10" 
                VerticalAlignment="Bottom"
                Width="40"
                Height="40"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="NavigateToAddedPage"/>
    </Grid>
</UserControl>
