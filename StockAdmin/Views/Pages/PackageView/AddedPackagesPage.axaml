<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:models="clr-namespace:StockAdmin.Models"
             x:Class="StockAdmin.Views.Pages.PackageView.AddedPackagesPage">
    <ScrollViewer>
        <StackPanel Width="500">
            <TextBlock x:Name="Title" Text="Добавление пачек"/>
            
            <ComboBox x:Name="CmbSizes" 
                      DisplayMemberBinding="{Binding DataType=models:Size, Path=number}" 
                      HorizontalAlignment="Stretch"/>
            <TextBlock Text="Пачки"/>
            <StackPanel x:Name="MainPanel">
                <StackPanel Orientation="Horizontal" Width="500">
                    <TextBox x:Name="NudCount" 
                             KeyDown="InputSymbol"
                             Focusable="True"
                             Text=""
                             Watermark="Введите количество"
                             Width="125"
                             Grid.Column="0"/>
                    <ComboBox x:Name="CmbMaterials" 
                              DisplayMemberBinding="{Binding DataType=models:Material, Path=name}"
                              SelectedValueBinding="{Binding DataType=models:Material, Path=id}"
                              SelectedValue="{Binding DataType=models:Package, Path=materialId}"
                              PlaceholderText="Выберите материал"
                              Width="125"
                              Grid.Column="1"/>
                              
                </StackPanel>
            </StackPanel>
            
            <Button Content="Сохранить" Click="TrySaveElements"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
