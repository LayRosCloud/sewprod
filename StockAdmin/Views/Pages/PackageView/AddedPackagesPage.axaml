<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:models="clr-namespace:StockAdmin.Models"
             x:Class="StockAdmin.Views.Pages.PartyView.AddedPackagesPage">
    <ScrollViewer>
        <StackPanel Width="300">
            <TextBlock x:Name="Title" Text="Добавление пачек"/>
            
            <ComboBox x:Name="CmbSizes" 
                      DisplayMemberBinding="{Binding DataType=models:Size, 
            Path=fullName}" 
                      HorizontalAlignment="Stretch"/>
            <TextBlock Text="Пачки"/>
            <StackPanel x:Name="MainPanel" >
                <TextBox x:Name="NudCount" 
                         KeyDown="InputSymbol"
                         Focusable="True"
                         Text=""
                         Watermark="Введите количество"/>
            </StackPanel>
            
            <Button Content="Сохранить" Click="TrySaveElements"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
