<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:StockAdmin.Models"
             x:DataType="models:Package" 
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StockAdmin.Views.Pages.PackageView.PackagePage">
    <StackPanel>
        <Button Content="Добавить" Click="NavigateToAddedPackagesPage"/>
        <DataGrid x:Name="List" 
                  DoubleTapped="NavigateToMoreInformation" 
                  LoadingRow="LoadRowPackage">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Добавил" 
                                    Binding="{Binding person.uid}"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Размер" 
                                    Binding="{Binding size.number}"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Пачки" 
                                    Binding="{Binding count}"
                                    IsReadOnly="True"/>
                
                <DataGridCheckBoxColumn Header="Окончена ли" 
                                        Binding="{Binding isEnded}"
                                        x:DataType="models:Package" 
                                        IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
