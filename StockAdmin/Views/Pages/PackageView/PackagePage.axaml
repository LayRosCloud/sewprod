<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:StockAdmin.Models"
             x:DataType="models:Package" 
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StockAdmin.Views.Pages.PackageView.PackagePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Finder" 
                 Watermark="Поиск..." 
                 HorizontalAlignment="Left"
                 Width="200"/>
        <DataGrid Grid.Row="1" x:Name="List" 
                  DoubleTapped="NavigateToMoreInformation"
                  LoadingRow="LoadRowPackage">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Добавил" 
                                    Binding="{Binding person.uid}"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Размер" 
                                    Binding="{Binding size.number}"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Пачки" 
                                    Binding="{Binding count}"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Материал" 
                                    Binding="{Binding material.name}"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Цвет" 
                                    Binding="{Binding color.name}"
                                    IsReadOnly="True"/>
                
                <DataGridTextColumn Header="Артикул" 
                                    Binding="{Binding uid}"
                                    IsReadOnly="True"/>
                
                <DataGridCheckBoxColumn Header="Окончена ли" 
                                        Binding="{Binding isEnded}"
                                        x:DataType="models:Package" 
                                        IsReadOnly="True"/>
                
                <DataGridCheckBoxColumn Header="Повтор?" 
                                        Binding="{Binding isRepeat}"
                                        x:DataType="models:Package" 
                                        IsReadOnly="True"/>
                <DataGridTemplateColumn>
                    <DataTemplate>
                        <WrapPanel Orientation="Horizontal">
                            <Button Content="✏️" 
                                    Click="NavigateToEditPage"/>
                            <Button Content="🗑️" 
                                    Click="ShowDeleteWindow"/>
                        </WrapPanel>
                    </DataTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Grid.Row="1" 
                Content="+" 
                Background="#192655" 
                FontWeight="Bold" 
                Foreground="White" 
                FontSize="20" 
                HorizontalAlignment="Right" 
                Margin=" 10" 
                VerticalAlignment="Bottom"
                Width="40"
                Height="40"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="NavigateToAddedPackagesPage"/>
        <Grid x:Name="DeletedContainer" 
              IsVisible="False" 
              Grid.Row="0" 
              Grid.RowSpan="2">
            
            <Border 
                Background="Black"
                Opacity="0.8"
                Margin="0" 
                Padding="0" 
                BorderThickness="0"
            />
            <Border Background="White" 
                    Padding="5" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    CornerRadius="10" 
                    Width="600" 
                    Height="300">
                <Grid>
                    <StackPanel>
                        <TextBlock 
                            Text="вы уверены?" 
                            FontWeight="Bold" 
                            FontSize="40" 
                            Foreground="#192655"/>
                        <TextBlock 
                            x:Name="DeletedMessage"
                            FontSize="20" 
                            TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <Button 
                        Content="Да" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom" 
                        Background="Transparent" 
                        Foreground="Brown"
                        Click="SendYesAnswerOnDeleteItem"/>
                    
                    <Button 
                        Content="Нет" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                        FontWeight="Bold" 
                        Foreground="#192655"
                        Click="SendNoAnswerOnDeleteItem"/>
                    
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
