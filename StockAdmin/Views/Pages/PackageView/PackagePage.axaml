<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:StockAdmin.Models"
             x:DataType="models:GroupedPackages" 
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StockAdmin.Views.Pages.PackageView.PackagePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0" x:Name="Finder" 
                 Watermark="Поиск..." 
                 HorizontalAlignment="Left"
                 Width="200"
                 TextChanged="TextChanged"/>
        
        <DataGrid Grid.Row="1" x:Name="List" 
                  RowDetailsVisibilityMode="Visible">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО кройщика" Binding="{Binding FullName}" IsReadOnly="True"/>
            </DataGrid.Columns>
            <DataGrid.RowDetailsTemplate>
                <DataTemplate x:DataType="models:GroupedPackages">
                    <StackPanel Margin="10 0 0 10">
                        <DataGrid ItemsSource="{Binding Packages}" 
                                  LoadingRow="LoadRowPackage" 
                                  DoubleTapped="NavigateToMoreInformation">
                            <DataGrid.Columns>
                                
                    
                                <DataGridTextColumn Header="Номер кроя" 
                                                    Binding="{Binding DataType=models:PackageEntity, Path=Party.CutNumber}"
                                                    IsReadOnly="True"/>
                                
                                <DataGridTemplateColumn Header="Статус" IsReadOnly="True">
                                    <DataTemplate>
                                        <Border Padding="2 5" Margin="5" CornerRadius="10" Background="{Binding DataType=models:PackageEntity, Path=StatusColor}">
                                            <TextBlock Text="{Binding DataType=models:PackageEntity, Path=Status}"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn>
                
                    <DataGridTextColumn Header="Модель" 
                                        Binding="{Binding DataType=models:PackageEntity, Path=Party.Model.Title}"
                                        IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Размер" 
                                        Binding="{Binding DataType=models:PackageEntity, Path=Size.Number}"
                                        IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Растовка" 
                                        Binding="{Binding DataType=models:PackageEntity, Path=Size.Age.Name}"
                                        IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Добавил" 
                                        Binding="{Binding DataType=models:PackageEntity, Path=Person.FullName}"
                                        IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Пачки" 
                                        Binding="{Binding DataType=models:PackageEntity, Path=Count}"
                                        IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Материал"
                                        Binding="{Binding DataType=models:PackageEntity, Path=Material.Name}"
                                        IsReadOnly="True"/>
                    
                    <DataGridCheckBoxColumn Header="Повтор?" 
                                            Binding="{Binding IsRepeat}"
                                            x:DataType="models:PackageEntity" 
                                            IsReadOnly="True"/>
                    
                    <DataGridCheckBoxColumn Header="Overlock" 
                                            Binding="{Binding OverlockEnded}"
                                            x:DataType="models:PackageEntity" 
                                            IsReadOnly="True"/>
                    
                    <DataGridCheckBoxColumn Header="Универсальная" 
                                            Binding="{Binding UniversalEnded}"
                                            x:DataType="models:PackageEntity" 
                                            IsReadOnly="True"/>
                    
                    <DataGridCheckBoxColumn Header="Плоская" 
                                            Binding="{Binding FlatEnded}"
                                            x:DataType="models:PackageEntity" 
                                            IsReadOnly="True"/>
                    
                    <DataGridCheckBoxColumn Header="Глажка" 
                                            Binding="{Binding IroningEnded}"
                                            x:DataType="models:PackageEntity" 
                                            IsReadOnly="True"/>
                    
                    <DataGridCheckBoxColumn Header="Склад" 
                                            Binding="{Binding IsEnded}"
                                            x:DataType="models:PackageEntity" 
                                            IsReadOnly="True"/>
                    <DataGridTemplateColumn>
                        <DataTemplate>
                            <WrapPanel Orientation="Horizontal">
                                <Button Content="✏️" 
                                        Click="NavigateToEditPage"/>
                                <Button Content="🗑️" 
                                        Click="ShowDeleteWindow"/>
                            </WrapPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>
        
        <Button Grid.Row="1" 
                Content="+" 
                Background="#192655" 
                FontWeight="Bold" 
                Foreground="White" 
                FontSize="20" 
                HorizontalAlignment="Right" 
                Margin=" 10" 
                VerticalAlignment="Bottom"
                Width="40"
                Height="40"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="NavigateToAddedPackagesPage"/>
        <Grid x:Name="DeletedContainer" 
              IsVisible="False" 
              Grid.Row="0" 
              Grid.RowSpan="2">
            
            <Border 
                Background="Black"
                Opacity="0.8"
                Margin="0" 
                Padding="0" 
                BorderThickness="0"
            />
            <Border Background="White" 
                    Padding="5" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    CornerRadius="10" 
                    Width="600" 
                    Height="300">
                <Grid>
                    <StackPanel>
                        <TextBlock 
                            Text="вы уверены?" 
                            FontWeight="Bold" 
                            FontSize="40" 
                            Foreground="#192655"/>
                        <TextBlock 
                            x:Name="DeletedMessage"
                            FontSize="20" 
                            TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <Button 
                        Content="Да" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom" 
                        Background="Transparent" 
                        Foreground="Brown"
                        Click="SendYesAnswerOnDeleteItem"/>
                    
                    <Button 
                        Content="Нет" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Bottom" 
                        FontWeight="Bold" 
                        Foreground="#192655"
                        Click="SendNoAnswerOnDeleteItem"/>
                    
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
