<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:StockAdmin.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StockAdmin.Views.Pages.SizeView.SizePage">
    <Grid>
        <TabControl>
        <TabItem Header="Размеры" x:DataType="models:SizeEntity">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal">
                    <TextBox x:Name="FinderSize" 
                             Watermark="Поиск..."
                             Width="200" 
                             Background="White"
                             TextChanged="TextChangedSize"
                             />
                </StackPanel>
                <DataGrid 
                    Grid.Row="1" 
                    x:Name="ListSizes">
                    <DataGrid.Columns>
                        <DataGridTextColumn 
                            Header="Значение" 
                            Binding="{Binding Number}" 
                            IsReadOnly="True"/>
                        
                        <DataGridTextColumn 
                            Header="Растовка" 
                            Binding="{Binding Age.Name}" 
                            IsReadOnly="True"/>
                        
                        <DataGridTemplateColumn>
                            <DataTemplate>
                                <WrapPanel Orientation="Horizontal">
                                    <Button Content="✏️" 
                                            Click="NavigateToEditSizePage"/>
                                    <Button Content="🗑️"
                                            Click="ShowDeleteWindowSize"/>
                                </WrapPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <Button Grid.Row="1" 
                        Classes="plus"
                        Click="NavigateToAddedSizePage"/>
                <Grid x:Name="DeletedContainerSize" 
                      IsVisible="False" 
                      Grid.Row="0" 
                      Grid.RowSpan="2">
            
                    <Border 
                        Classes="deleteBackground"
                    />
                    <Border Classes="deleteContainer">
                        <Grid>
                            <StackPanel>
                                <TextBlock 
                                    Text="вы уверены?" 
                                    FontWeight="Bold" 
                                    FontSize="40" 
                                    Foreground="#192655"/>
                                <TextBlock 
                                    x:Name="DeletedMessageSize"
                                    FontSize="20" 
                                    TextWrapping="Wrap"/>
                            </StackPanel>
                    
                            <Button 
                                Classes="yes"
                                Click="SendYesAnswerOnDeleteItem"/>
                    
                            <Button 
                                Classes="no"
                                Click="SendNoAnswerOnDeleteItem"/>
                    
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </TabItem>
        
        <TabItem Header="Растовки" x:DataType="models:AgeEntity">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal">
                    <TextBox x:Name="FinderTypeOfSizes" 
                             Watermark="Поиск..."
                             Width="200" 
                             Background="White" 
                             TextChanged="TextChangedTypeOfSize"/>
                </StackPanel>
                <DataGrid 
                    Grid.Row="1" 
                    x:Name="ListAges">
                    <DataGrid.Columns>
                        <DataGridTextColumn 
                            Header="Название" 
                            Binding="{Binding Name}" 
                            IsReadOnly="True"/>
                        
                        <DataGridTextColumn 
                            Header="Описание" 
                            Binding="{Binding Description}" 
                            IsReadOnly="True"/>
                        
                        <DataGridTemplateColumn Header="Управление">
                            <DataTemplate>
                                <WrapPanel Orientation="Horizontal">
                                    <Button Content="✏️" 
                                            Click="NavigateToEditTypeOfSizePage"/>
                                    <Button Content="🗑️"
                                            Click="ShowDeleteWindowTypeOfSize"/>
                                </WrapPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <Button Grid.Row="1" 
                        Classes="plus"
                        Click="NavigateToTypeOfSizePage"/>
                
                <Grid x:Name="DeletedContainerTypeSize" 
                      IsVisible="False" 
                      Grid.Row="0" 
                      Grid.RowSpan="2">
            
                    <Border 
                        Classes="deleteBackground"
                    />
                    <Border Classes="deleteContainer">
                        <Grid>
                            <StackPanel>
                                <TextBlock 
                                    Text="вы уверены?" 
                                    FontWeight="Bold" 
                                    FontSize="40" 
                                    Foreground="#192655"/>
                                <TextBlock 
                                    x:Name="DeletedMessageTypeSize"
                                    FontSize="20" 
                                    TextWrapping="Wrap"/>
                            </StackPanel>
                    
                            <Button 
                                Classes="yes"
                                Click="SendYesTypeSizeAnswerOnDeleteItem"/>
                    
                            <Button
                                Classes="no"
                                Click="SendNoAnswerOnDeleteItem"/>
                    
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
        <Border x:Name="LoadingBorder" Grid.Row="0" Grid.RowSpan="2" Background="White">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Загрузка" FontSize="30" FontWeight="Bold"/>
                <TextBlock Text="Пожалуйста подождите"/>
            </StackPanel>
        </Border>
    </Grid>
    
</UserControl>
