<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="800" MinHeight="450"
        x:Class="StockAdmin.Views.AuthWindow"
        WindowStartupLocation="CenterScreen"
        Title="{Binding ElementName=Title, Path=Text}" Icon="/Assets/logo.ico">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Background="#1F4172">
                <StackPanel VerticalAlignment="Center">
                    <Border Width="100" Height="100" BorderBrush="#Fff" BorderThickness="5" CornerRadius="10">
                        <TextBlock HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Text="АП" 
                                   FontWeight="Bold"
                                   Foreground="#FFF" 
                                   FontSize="50"/>
                    </Border>
                    <TextBlock Text="Административная панель" 
                               HorizontalAlignment="Center" 
                               FontSize="25" 
                               FontWeight="Bold" 
                               Foreground="#ececec" 
                               TextWrapping="Wrap"/>
                    <TextBlock 
                        Text="Данное приложение необходимо для учета стадий производства в компании ООО Абаканский трикотаж" 
                        Foreground="White" Margin="5 10" TextWrapping="Wrap" Opacity="0.9"/>
                </StackPanel>
            </Border>
            <StackPanel Grid.Column="1" 
            Width="300" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <TextBlock
                Name="Title"
                Text="Авторизация"
                FontSize="25"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Margin="0 10"
                />
            <Grid 
                >
                <Grid.ColumnDefinitions
                    >
                    <ColumnDefinition 
                        Width="*"
                    />
                    <ColumnDefinition 
                        Width="30"
                    />
                </Grid.ColumnDefinitions>
            
                <Grid.RowDefinitions
                >
                    <RowDefinition
                        Height="*"
                    />
                    <RowDefinition
                        Height="*"
                    />
                    <RowDefinition
                        Height="*"
                    />
                    <RowDefinition
                        Height="*"
                    />
                </Grid.RowDefinitions>
                <!--Пара (Текст-текстовое поле) - почта-->
                <TextBlock Grid.Column="0" Grid.Row="0" 
                    Text="почта:"
                    FontWeight="Bold"
                    FontSize="18"
                    VerticalAlignment="Center"/>

                <Image Source="/Assets/email.png" 
                       Width="25" 
                       Grid.Row="1" 
                       Grid.Column="1"
                       />
                
                <TextBox 
                    x:Name="Email"
                    Grid.Row="1" 
                    Grid.Column="0"
                    Text="anna_fetisova@gmail.com"
                    Watermark="Введите почту*"
                    Margin="1"
                    />
                <Image Grid.Row="3" 
                    Grid.Column="1"  Source="/Assets/password.png" Width="25"/>

                <!--Пара (Текст-текстовое поле) - пароль-->
                <TextBlock Grid.Row="2" 
                    Grid.Column="0" 
                    Text="пароль:"
                    FontWeight="Bold"
                    FontSize="18"
                    VerticalAlignment="Center"
                    Margin="0 10 0 0 "/>
                <TextBox 
                    x:Name="Password"
                    Grid.Row="3" 
                    Grid.Column="0" 
                    Text="uniquePassword"
                    PasswordChar="•"
                    Watermark="Введите пароль*"
                    Margin="1"
                    />
            </Grid>
            <Grid>
                <CheckBox 
                    Content="Запомнить меня?" 
                    IsChecked="False" 
                    HorizontalAlignment="Left"
                    />
                <Button 
                    Content="Войти" 
                    HorizontalAlignment="Right"
                    Click="TryEnterToApplication"
                    Margin="0 0 30 0 "
                    />
            </Grid>
        </StackPanel>
        </Grid>
        
        
        <Border x:Name="BorderError" 
                Background="DarkRed"
                Padding="15 5" 
                CornerRadius="5"
                IsVisible="False"
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="5">
            <StackPanel Orientation="Horizontal" >
                <TextBlock x:Name="ErrorText"
                            Text="Текст ошибки" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <Button 
                    Content="x" 
                    Foreground="White" 
                    Margin="5 0 0 0"
                    Click="DisableErrorMessage"/>
            </StackPanel>
            
        </Border>
        
        <!--Элемент для отображения лого-->
        <Border
            x:Name="LogoBorder"
            IsVisible="True"
            Background="White"
        >
            
            <StackPanel 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                >
                
                <!--Место для лого-->
                <Border Width="200" 
                        Height="200" 
                        CornerRadius="20"
                >
                    <Border.Background
                        >
                        <LinearGradientBrush 
                            StartPoint="10 0" 
                            EndPoint="0 180"
                            >
                            <GradientStop 
                                Color="#1a1a1a" 
                                Offset="0"
                                />
                            <GradientStop 
                                Color="#1e1e1e" 
                                Offset="1"
                                />
                        </LinearGradientBrush>
                    </Border.Background>
                    
                    <TextBlock
                        Foreground="White"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        FontSize="70"
                        >
                        <Run 
                            Text="а" 
                             Foreground="Yellow" 
                            />
                        <Run 
                            Text="т" 
                             Foreground="White"/>
                    </TextBlock>
                    
                </Border>
                <TextBlock
                    x:Name="LogoText"
                    Text="проверка подключения..."
                    FontSize="20"
                    FontWeight="Bold"
                />
            </StackPanel>
        </Border>
        
        
    </Grid>
    
</Window>
